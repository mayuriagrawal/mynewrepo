<p>
  <strong>Title:</strong>
  <%= @known.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @known.text %>
</p>
  
<h2>Comments</h2>
<%= render @known.comments %>

<h2>Add a comment:</h2>
<%= form_for([@known, @known.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', knowns_path %>
| <%= link_to 'Edit', edit_known_path(@known) %>